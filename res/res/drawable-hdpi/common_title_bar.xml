<?xml version="1.0" encoding="utf-8"?>
<!-- title bar -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commen_title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/head_padding_bottom"
    android:paddingTop="@dimen/head_padding_top"
	android:background="@drawable/mine_layout_border_common"
         >

    <ImageButton
        android:id="@+id/commen_title_bar_ret"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/back" />

    <TextView
        android:id="@+id/commen_title_bar_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="淘学"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/common_title_bar_login"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:textColor="@color/skyblue"
            android:textSize="20sp"
            android:visibility="gone"
        android:text="注册" />

</RelativeLayout>