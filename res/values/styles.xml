<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="biginput">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/biginput</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="bigbutton_pri">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bigbutton_pri_bg</item>
    </style>
    
    <style name="bigbutton_sec">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bigbutton_sec_bg</item>
    </style>
    
    
    <style name="logged_img">        
         <item name="android:layout_width">0dip</item>
         <item name="android:layout_height">match_parent</item>
	     <item name="android:layout_weight">0.618</item>
	     <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style name="logged_text">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    
    <style name="logged_detail_text">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    
    <style name="logged_detail_img">        
         <item name="android:layout_height">match_parent</item>
	     <item name="android:layout_weight">0.618</item>
	     <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="mine_linearlayout">
        <item name="android:background">#fff</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="logged_text_value">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#aaa</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
