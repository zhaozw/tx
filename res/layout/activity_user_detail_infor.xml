<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context=".UserDetailInfor" >

    <include
        layout="@layout/common_title_bar" />
    
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

	    <LinearLayout
	        android:id="@+id/mine_detail_avatar_bar"
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border"
	         >
	
	        <TextView
	            style="@style/logged_text"
	            android:layout_width="180dp"
	            android:text="头像" />
	
	        <ImageView
	            android:id="@+id/iv_udi"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="3dp"
	            android:paddingBottom="3dp"
	            style="@style/logged_detail_img"
	            android:src="@drawable/item_pic_default" />
	
	    </LinearLayout>
	    
	    <LinearLayout 
	        style="@style/mine_linearlayout"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp">
	        
	        <TextView
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="昵称" />
	
	        <TextView
	            android:id="@+id/tv_udi_nickname"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
	     <LinearLayout 
	        style="@style/mine_linearlayout"
        	android:background="@drawable/mine_layout_border"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp">
	        
	        <TextView
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="学校" />
	
	        <TextView
	            android:id="@+id/tv_udi_school"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
	     <LinearLayout 
	        style="@style/mine_linearlayout"
        	android:background="@drawable/mine_layout_border"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
	        
	        <TextView
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="地址" />
	
	        <TextView
	            android:id="@+id/tv_detail_location"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
	        style="@style/mine_linearlayout"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:textColor="#aaa"
                android:text="学校信息" />


        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:layout_height="wrap_content"
	            style="@style/logged_text"
                android:text="校区" />

            <TextView
                android:id="@+id/tv_udi_xiaoqu"
                android:layout_height="wrap_content"
                style="@style/logged_text_value"
                android:text="良乡" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:layout_height="wrap_content"
	            style="@style/logged_text"
                android:text="学院" />

            <TextView
                android:id="@+id/tv_udi_xueyuan"
                android:layout_height="wrap_content"
                style="@style/logged_text_value"
                android:layout_alignParentRight="false"
                android:text="计算机学院" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
	            style="@style/logged_text"
                android:layout_height="wrap_content"
                android:text="专业" />

            <TextView
                android:id="@+id/tv_udi_major"
                style="@style/logged_text_value"
                android:layout_height="wrap_content"
                android:text="计算机科学与技术" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
	            style="@style/logged_text"
                android:layout_height="wrap_content"
                android:text="年级" />

            <TextView
                android:id="@+id/tv_udi_grade"
                style="@style/logged_text_value"
                android:layout_height="wrap_content"
                android:text="大二" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
