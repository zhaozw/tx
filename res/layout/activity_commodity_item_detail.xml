<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <include layout="@layout/common_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
	   		android:paddingLeft="@dimen/list_padding"
            android:layout_height="wrap_content"
            android:text="添加图片" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingLeft="@dimen/list_padding"
	    android:paddingRight="@dimen/list_padding"
        >
    
    <LinearLayout
        android:id="@+id/commodity_item_detail_linearlayout_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp" >

        <ImageView
            android:id="@+id/commodity_pic_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/commodity_add" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品名称" />

        <EditText
            android:id="@+id/commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品类型" />

        <Spinner
            android:id="@+id/spiner_class"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品价格" />

        <EditText
            android:id="@+id/commidty_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numeric="decimal"
            android:ems="10" >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp" >
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细描述" />
        
    </LinearLayout>

    <EditText
        android:id="@+id/commodity_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|top"
 		android:text="商品的详细描述。"
	    android:paddingLeft="2dp"
	    android:paddingTop="5dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="5dp">

    </EditText>
	
    </LinearLayout>
    
</LinearLayout>
