<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:paddingBottom="@dimen/head_padding_bottom"
        android:paddingTop="@dimen/head_padding_top" >

        <TextView
            android:id="@+id/tv_header"
            style="@style/headtext"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/secondhand" />

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15sp"
            android:layout_centerVertical="true"
            android:background="@color/yellow"
            android:src="@drawable/search_key_drawleft" />

    </RelativeLayout>

	 <!-- 我是顶部栏和下面内容的分割线 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/line_h2" />
    
	 <LinearLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="match_parent">
	    <ListView
	        android:id="@+id/second_hand_listview" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:dividerHeight="1px"
	        android:scrollbars="none"></ListView>
	    </LinearLayout>


</LinearLayout>
