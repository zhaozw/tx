<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="${packageName}.${activityClass}" >

    <include
        layout="@layout/common_title_bar" />
    
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

	    <LinearLayout
	        android:id="@+id/mine_detail_avatar_bar"
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border"
	         >
	
	        <TextView
	            android:id="@+id/textView1"
	            style="@style/logged_text"
	            android:layout_width="180dp"
	            android:text="头像" />
	
	        <ImageView
	            android:id="@+id/img_mine_detail_avatar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="3dp"
	            android:paddingBottom="3dp"
	            style="@style/logged_detail_img"
	            android:src="@drawable/item_pic_default" />
	
	    </LinearLayout>
	    
	    <LinearLayout 
	        style="@style/mine_linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="昵称" />
	
	        <TextView
	            android:id="@+id/mine_detail_name"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
	     <LinearLayout 
	        style="@style/mine_linearlayout"
        	android:background="@drawable/mine_layout_border"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="学校" />
	
	        <TextView
	            android:id="@+id/mine_detail_college"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
	     <LinearLayout 
	        style="@style/mine_linearlayout"
        	android:background="@drawable/mine_layout_border"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:text="地址" />
	
	        <TextView
	            android:id="@+id/mine_detail_location"
				style="@style/mine_detail_value"
	            android:inputType="textPersonName" >
	        </TextView>
	        
	    </LinearLayout>
	    
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
	        style="@style/mine_linearlayout"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
	            style="@style/logged_text"
	            android:textColor="#aaa"
                android:text="学校信息" />

            <ImageButton
                android:id="@+id/btn_mine_detail_school_mdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="170dp"
                android:background="@null"
                android:src="@drawable/edit_file_50" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
	            style="@style/logged_text"
                android:text="校区" />

            <TextView
                android:id="@+id/mine_detail_campus"
                android:layout_height="wrap_content"
                style="@style/logged_text_value"
                android:text="" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:id="@+id/textView5"
                android:layout_height="wrap_content"
	            style="@style/logged_text"
                android:text="学院" />

            <TextView
                android:id="@+id/mine_detail_school"
                android:layout_height="wrap_content"
                style="@style/logged_text_value"
                android:layout_alignParentRight="false"
                android:text="" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:id="@+id/textView7"
	            style="@style/logged_text"
                android:layout_height="wrap_content"
                android:text="专业" />

            <TextView
                android:id="@+id/mine_detail_major"
                style="@style/logged_text_value"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
	        style="@style/mine_linearlayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         	android:background="@drawable/mine_layout_border">

            <TextView
                android:id="@+id/textView9"
	            style="@style/logged_text"
                android:layout_height="wrap_content"
                android:text="年级" />

            <TextView
                android:id="@+id/mine_detail_grade"
                style="@style/logged_text_value"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
