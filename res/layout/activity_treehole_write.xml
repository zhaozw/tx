<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TreeholeWriteActivity" >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/head_padding_bottom"
            android:paddingTop="@dimen/head_padding_top" >

            <Button
                android:id="@+id/b_back_thwrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:textColor="@color/royalblue"
                android:background="@color/white"
                android:text="取消" />

            <Button
                android:id="@+id/b_send_thwrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15sp"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:textColor="@color/royalblue"
                android:background="@color/white"
                android:text="发送" />
        </RelativeLayout>

        <EditText 
            android:id="@+id/et_thwrite"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:gravity="top"
            android:hint="写点什么..."/>
    </LinearLayout>

</LinearLayout>
